@using Survey.Models.Entitites;
@model SurveyStartDto
<div class="container">
<form method="post" enctype="multipart/form-data">
	<input asp-for="@Model.UserId" disabled />
	<input type="text" asp-for="@Model.SurveyId" value="@Model.SurveyId" hidden />
	<br />
	@for (int i = 0; i < Model.Question.Count; i++)
	{
	<div class="row ">
		<div class="col-md-6 mt-3" >
		<input type="text" asp-for="@Model.Question[i].Id" value="@Model.Question[i].Id" hidden />
					<b><label class="font-weight-bold"> @Model.Question[i].QuestionTitle.ToUpper() </label></b>
				<hr>
		@if (Model.Question[i].Opt != null && Model.Question[i].QuestionType == Survey.Models.Entitites.QuestionType.radio_button)
		{


						<label> <input type="radio" class="form-check-input my-2" asp-for="@Model.Question[i].answer" value="@Model.Question[i].Opt.Option1"> @Model.Question[i].Opt.Option1</label>
			<br />
					<label> <input type="radio" class="form-check-input my-2" asp-for="@Model.Question[i].answer" value="@Model.Question[i].Opt.Option2"> @Model.Question[i].Opt.Option2</label>
			<br />
						<label> <input type="radio" class="form-check-input my-2" asp-for="@Model.Question[i].answer" value="@Model.Question[i].Opt.Option3"> @Model.Question[i].Opt.Option3</label>
			<br />
						<label> <input type="radio" class="form-check-input my-2" asp-for="@Model.Question[i].answer" value="@Model.Question[i].Opt.Option4"> @Model.Question[i].Opt.Option4</label>
			<br />
		}
		else if (Model.Question[i].QuestionType == Survey.Models.Entitites.QuestionType.file)
		{
						<input type="file" class="form-control-file" asp-for="@Model.Question[i].file" />
		}
		else if (Model.Question[i].QuestionType == Survey.Models.Entitites.QuestionType.radio_button)
		{
						<input type="radio" class="form-check-input" asp-for="@Model.Question[i].answer" value="true" />
			<label>Doğru</label>

						<input type="radio" class="form-check-input" asp-for="@Model.Question[i].answer" value="false" />
			<label>Yanlış</label>
			<br />
		}
	
		else
		{
			<input type="text" asp-for="@Model.Question[i].answer" />
			<br />
		}
			</div>
				</div>

	}
	<br />
	<button type="submit" class="btn btn-outline-primary">Kaydet</button>

</form>
</div>
